generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id         Int      @id @default(autoincrement())
  googleId   String   @unique
  first_name String
  last_name  String
  email      String   @unique
  picture    String?
  role       Role     @default(JUGADOR)
  created_at DateTime @default(now())
}

enum Role {
  JUGADOR
  CLUB
}
